{
	"extends": "@skyra/eslint-config",
	"compilerOptions": {
		"target": "ES2019",
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"outDir": "../dist",
		"rootDir": "../",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"paths": {
			"@root/*": [
				"../src/*"
			],
			"@mafia/*": [
				"../src/lib/mafia/*"
			],
			"@lib/*": [
				"../src/lib/*",
			],
			"@util/*": [
				"../src/lib/util/*"
			],
			"@mocks/*": [
				"./mocks/*"
			]
		}
	},
	"include": [
		".",
		"../src/*",
		"../src/**/*"
	]
}