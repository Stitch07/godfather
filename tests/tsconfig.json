{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "noEmit": true,
        "incremental": false,
        "baseUrl": ".",
        "paths": {
            "#lib/*": ["../src/lib/*"],
            "#mafia/*": ["../src/lib/mafia/*"],
            "#util/*": ["../src/lib/util/*"]
