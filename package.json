{
	"name": "godfather",
	"version": "1.0.0",
	"description": "A Discord bot that hosts games of Mafia.",
	"main": "dist/index.js",
	"repository": "https://github.com/Soumil07/tvm-bot.git",
	"author": "Soumil07",
	"license": "GPL-3.0",
	"private": false,
	"imports": {
		"#lib/*": "./dist/lib/*.js",
		"#mafia/*": "./dist/lib/mafia/*.js",
		"#util/*": "./dist/lib/util/*.js",
		"#root/*": "./dist/*.js",
		"#mafia/roles": "./dist/lib/mafia/roles/index.js",
		"#mafia/roles/*.js": "./dist/lib/mafia/roles/*.js"
	},
	"scripts": {
		"build": "tsc -p src",
		"build:prod": "tsc -p src --sourceMap false",
		"dev": "yarn build && node .",
		"clean": "rimraf dist",
		"watch": "tsc-watch -b src --onSuccess \"node .\"",
		"predocker:watch": "yarn",
		"docker:watch": "yarn watch",
		"lint": "eslint src --ext ts --fix",
		"test": "jest",
		"typeorm": "node -r module-alias/register ./node_modules/typeorm/cli.js",
		"predev:typeorm": "yarn build",
		"dev:typeorm": "yarn typeorm",
		"start": "node dist/"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@babel/preset-env": "^7.11.0",
		"@skyra/eslint-config": "^5.2.1",
		"@types/jest": "^26.0.19",
		"@types/js-yaml": "^3.12.5",
		"@types/module-alias": "^2.0.0",
		"@types/node-fetch": "^2.5.7",
		"@types/ws": "^7.2.7",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"all-contributors-cli": "^6.19.0",
		"babel-jest": "^26.2.2",
		"eslint": "^7.5.0",
		"jest": "^26.2.2",
		"jest-mock-extended": "^1.0.9",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.4",
		"ts-node": "^9.1.1",
		"tsc-watch": "^4.2.9",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"@sapphire/decorators": "^1.0.1",
		"@sapphire/framework": "^1.0.0-alpha.0",
		"@sapphire/pieces": "github:sapphire-project/pieces#build",
		"@sapphire/plugin-logger": "1.0.2",
		"@sapphire/ratelimits": "sapphire-project/utilities#build-ratelimits",
		"@sapphire/time-utilities": "^1.1.0",
		"@sapphire/type": "^1.0.1",
		"@sapphire/utilities": "^1.0.1",
		"bufferutil": "^4.0.2",
		"discord.js": "^12.3.1",
		"fs-nextra": "^0.5.1",
		"js-yaml": "^3.14.1",
		"node-fetch": "^2.6.1",
		"pg": "^8.4.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.28",
		"typeorm-naming-strategies": "^2.0.0",
		"utf-8-validate": "^5.0.3"
	},
	"resolutions": {
		"@sapphire/pieces": "github:sapphire-project/pieces#build"
	}
}
