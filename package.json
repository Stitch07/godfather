{
	"name": "godfather",
	"version": "1.0.0",
	"description": "A Discord bot that hosts games of Mafia.",
	"main": "dist/index.js",
	"repository": "https://github.com/Soumil07/tvm-bot.git",
	"author": "Soumil07",
	"license": "GPL-3.0",
	"private": false,
	"scripts": {
		"build": "tsc -p src",
		"build:prod": "tsc -p src --sourceMap false",
		"dev": "yarn build && node .",
		"clean": "rimraf dist",
		"watch": "tsc-watch -b src --onSuccess \"node -r source-map-support/register .\"",
		"predocker:watch": "yarn",
		"docker:watch": "yarn watch",
		"lint": "eslint src tests --ext ts --fix",
		"test": "jest --runInBand",
		"typeorm": "node -r module-alias/register ./node_modules/typeorm/cli.js",
		"predev:typeorm": "yarn build",
		"dev:typeorm": "yarn typeorm",
		"start": "node -r source-map-support/register dist/",
		"format": "prettier --write \"{src,tests}/**/*.{js,ts,mjs}\" \"jest.config.js\" \"{CHANGELOG,CONTRIBUTING,README}.md\" *.yml"
	},
	"devDependencies": {
		"@sapphire/eslint-config": "^2.1.0",
		"@sapphire/prettier-config": "^1.0.6",
		"@sapphire/ts-config": "^2.0.0",
		"@types/jest": "^26.0.20",
		"@types/js-yaml": "^4.0.0",
		"@types/module-alias": "^2.0.0",
		"@types/node-fetch": "^2.5.8",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"all-contributors-cli": "^6.19.0",
		"babel-jest": "^26.6.3",
		"eslint": "^7.18.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"jest-mock-extended": "^1.0.10",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.1",
		"tsc-watch": "^4.2.9",
		"typescript": "4.1.3"
	},
	"dependencies": {
		"@sapphire/decorators": "^2.0.3",
		"@sapphire/framework": "1.0.0-alpha.3",
		"@sapphire/pieces": "^1.2.0",
		"@sapphire/plugin-logger": "1.0.6",
		"@sapphire/ratelimits": "^1.1.4",
		"@sapphire/time-utilities": "^1.2.7",
		"@sapphire/type": "^1.1.4",
		"@sapphire/utilities": "^1.4.3",
		"@sentry/integrations": "^6.0.1",
		"@sentry/node": "^6.0.1",
		"bufferutil": "^4.0.3",
		"discord.js": "^12.5.1",
		"fs-nextra": "^0.5.1",
		"js-yaml": "^4.0.0",
		"module-alias": "^2.2.2",
		"node-fetch": "^2.6.1",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"source-map-support": "^0.5.19",
		"typeorm": "^0.2.30",
		"typeorm-naming-strategies": "^2.0.0",
		"utf-8-validate": "^5.0.4"
	},
	"_moduleAliases": {
		"@lib": "dist/lib",
		"@mafia": "dist/lib/mafia",
		"@util": "dist/lib/util",
		"@root": "dist/"
	},
	"prettier": "@sapphire/prettier-config"
}
