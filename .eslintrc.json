{
	"extends": "@sapphire",
	"rules": {
		"@typescript-eslint/no-throw-literal": "off",
		"@typescript-eslint/naming-convention": [
			"error",
			{
				"selector": "variable",
				"format": ["camelCase", "UPPER_CASE", "PascalCase"]
			}
		],
		"@typescript-eslint/no-namespace": "off",
		"@typescript-eslint/no-var-requires": "off"
	}
}
