{
	"extends": "@skyra/eslint-config",
	"include": [
		"**/*.ts",
		"**/*.json"
	],
	"compilerOptions": {
		"target": "es2017",
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"paths": {
			"@root/*": [
				"./*"
			],
			"@mafia/*": [
				"lib/mafia/*"
			],
			"@lib/*": [
				"lib/*",
			],
			"@util/*": [
				"lib/util/*"
			]
		},
		"types": [
			"@sapphire/plugin-logger/dist/register"
		]
	}
}